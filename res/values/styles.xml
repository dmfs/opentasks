<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="ActivityDefault">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="CaldavProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="CaldavSeekBar" parent="android:Widget.SeekBar">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="DarkText">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="DarkTextEditText" parent="DarkText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TaskGroupText">
        <item name="android:textColor">#ff33b5e5</item>
    </style>

    <style name="detail_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="detail_label_line">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="editor_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="editor_label_line">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="TextAppearance.EditTask_Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextAppearance.EditTask_SpinnerButton" parent="TextAppearance.EditTask_Spinner">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="btn_remove">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/content_remove_light</item>
    </style>

    <style name="EditDetailPane">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="EditDetailLL">
        <item name="android:layout_width">fill_parent</item>
    </style>

</resources>