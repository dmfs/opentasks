<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="ActivityDefault">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="CaldavProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="CaldavSeekBar" parent="android:Widget.SeekBar">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="DarkText">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="DarkTextEditText" parent="DarkText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TaskGroupText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="detail_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="detail_label_line">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="ListItemLine">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="editor_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="editor_label_line">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="TextAppearance.EditTask_Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextAppearance.EditTask_SpinnerButton" parent="TextAppearance.EditTask_Spinner">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="btn_remove">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/content_remove_light</item>
    </style>

    <style name="EditDetailPane">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="EditDetailLL">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="TasksExpandableListItem"></style>

    <style name="ExpandableTaskList">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarSize">20dp</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="TaskListContainer"></style>

    <style name="TaskGroupListItem"></style>

    <style name="TaskListItemDate" parent="DarkText">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
    </style>

    <style name="TaskListGroupCount" parent="editor_label_text">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
    </style>

    <style name="task_list_item_divider">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="task_list_group_divider">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="task_list_overdue_text">
        <item name="android:textColor">@color/overdue_date_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="task_list_due_text">
        <item name="android:textColor">@color/due_date_text</item>
    </style>

</resources>