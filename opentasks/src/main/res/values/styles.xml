<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="OpenTasksAppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="searchViewStyle">@style/WhiteSearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="OpenTasksAppTheme" parent="OpenTasksAppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTitleStyle">@style/window_title_style</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">#FF333333</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowTitleStyle">@style/window_title_style</item>
    </style>

    <style name="AppThemeDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#FF333333</item>
        <item name="colorPrimary">@color/primary</item>
        <!-- <item name="android:background">@color/background_material_light</item> -->
        <!-- <item name="android:windowTitleStyle">@style/window_dialog_title_style</item> -->
    </style>

    <style name="window_dialog_title_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="DetailsTheme" parent="AppTheme">
        <item name="android:editTextStyle">@style/legacyEditText</item>
    </style>

    <style name="window_title_style">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActivityDefault">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="legacyEditText" parent="@android:style/Widget.EditText"></style>

    <style name="dark_text">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="dark_edit_text" parent="dark_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="task_group_text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="detail_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="detail_label_line">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Styles for Task Editor -->

    <style name="editor_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="editor_label_line">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="edit_detail_pane">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="edit_detail_ll">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- Styles for main task list -->

    <style name="tasks_expandable_list_item">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="expandable_task_list">
        <item name="android:divider">@null</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="task_list_container">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="task_group_list_item"></style>

    <style name="task_list_item_date" parent="dark_text">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
    </style>

    <style name="task_list_group_count" parent="editor_label_text">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
    </style>

    <style name="task_list_item_divider">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="task_list_group_divider">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
        <item name="android:layout_marginLeft">@dimen/task_list_left_margin</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="task_list_overdue_text">
        <item name="android:textColor">@color/overdue_date_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="task_list_due_text">
        <item name="android:textColor">@color/due_date_text</item>
    </style>

    <!-- Styles for Widgets -->

    <style name="task_widget_parent"> <!-- Common Style for all widgets -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="task_widget" parent="task_widget_parent">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="task_edit_widget" parent="task_widget">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="field_view_text_value" parent="dark_text"> <!-- Common style for all text displays in widgets -->
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="field_editor_text_value" parent="dark_edit_text"> <!-- Common style for all text edit fields in widgets -->
    </style>

    <style name="task_progressbar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="task_seekbar" parent="android:Widget.SeekBar">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="TextAppearance.EditTask_Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextAppearance.EditTask_SpinnerButton" parent="TextAppearance.EditTask_Spinner">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="btn_remove">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/content_remove</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="widget_header_divider">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="task_list_progress_background">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.fixed" parent="android:TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>

    <style name="time_forward_button" parent="@style/detail_label_text">
        <item name="android:background">@drawable/selectable_list_item</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="dialog_button_primary" parent="@style/Base.TextAppearance.AppCompat.fixed">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent_material_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_button_secondary" parent="dialog_button_primary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="dialog_button_stacked_primary" parent="dialog_button_primary">
        <item name="android:gravity">right</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dialog_button_stacked_secondary" parent="dialog_button_stacked_primary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="checklist_checked_item_text">
        <item name="android:textColor">#ff808080</item>
    </style>

    <style name="Theme.MaterialDialog" parent="@android:style/Theme.Dialog"></style>

    <style name="details_label_icon" parent="field_view_text_value">
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- styles for actionbar / toolbar -->

    <style name="actionColorBar">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="TextAppearance.StatusBar.EventContent.Title.colorFix"></style>

    <style name="TextAppearance.StatusBar.EventContent.Action"></style>

    <style name="ot_notification_icon_undo">
        <item name="android:src">@drawable/ic_24_undo_white</item>
    </style>

    <style name="opentasks_details_appbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="elevation">0dp</item>
    </style>

</resources>