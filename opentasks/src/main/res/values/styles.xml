<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DOWN from here: former v14 styles.xml content -->

    <style name="OpenTasksAppBaseTheme"
            parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="searchViewStyle">@style/WhiteSearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppBaseTheme"
            parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarWidgetTheme">@style/actionBarWidgetTheme</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_white</item>
        <item name="searchViewStyle">@style/WhiteSearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar"
            parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">?attr/colorPrimary</item>
        <item name="displayOptions">showTitle</item>
        <item name="icon">@android:color/transparent</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_white</item>
    </style>

    <style name="cursorColor"
            parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/text_cursor_white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DetailsActionBar"
            parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00000000</item>
        <item name="displayOptions">showTitle</item>
        <item name="icon">@android:color/transparent</item>
    </style>

    <style name="WhiteSearchViewStyle"
            parent="@style/Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/bg_searchview</item>
    </style>

    <style name="actionBarWidgetTheme"
            parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorHint">#80ffffff</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="DatePickerHolo"
            parent="@android:style/Theme.Holo.Light.Dialog"/>

    <style name="task_progressbar"
            parent="android:Widget.Holo.ProgressBar.Horizontal"/>

    <style name="task_seekbar"
            parent="android:Widget.Holo.SeekBar"/>

    <style name="TextAppearance.EditTask_Spinner"
            parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="dark_text">
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="detail_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="detail_label_line">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editor_label_text">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="editor_label_line">
        <item name="android:background">@null</item>
    </style>

    <style name="expandable_task_list">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarSize">20dp</item>
        <item name="android:divider">@null</item>
        <item name="android:background">#fff0f0f0</item>
    </style>

    <style name="task_list_item_divider">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@drawable/task_divider</item>
    </style>

    <style name="task_list_group_divider">
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="widget_header_divider">
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>

    <style name="dialog_button_primary"
            parent="TextAppearance.AppCompat.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/accent_material_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- UP: former v14, DOWN: former default+v11 -->

    <style name="DetailsTheme"
            parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/DetailsActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="btn_remove">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/content_remove</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dark_edit_text"
            parent="dark_text">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="task_widget"
            parent="task_widget_parent">
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginBottom">2sp</item>
    </style>

    <style name="task_group_text">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="field_view_text_value"
            parent="dark_text">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="field_editor_text_value"
            parent="dark_edit_text"> <!-- Common style for all text edit fields in widgets -->
    </style>

    <style name="task_list_widget_list">
        <item name="android:background">@drawable/widget_list_item_bg</item>
    </style>

    <style name="tasks_expandable_list_item">
        <item name="android:background">@drawable/selectable_list_item</item>
    </style>

    <style name="task_list_progress_background">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/task_progress_background_shade</item>
    </style>

    <style name="time_forward_button"
            parent="@style/detail_label_text">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="dialog_text_title"
            parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#C0000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_button_secondary"
            parent="dialog_button_primary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="actionColorBar">
        <item name="android:layout_height">@dimen/abc_action_bar_default_height_material</item>
    </style>


    <!-- UP: former v11+v14, DOWN: former default-->

    <style name="OpenTasksAppTheme"
            parent="OpenTasksAppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTitleStyle">@style/window_title_style</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme"
            parent="AppBaseTheme">
        <item name="android:textColor">#FF333333</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowTitleStyle">@style/window_title_style</item>
    </style>

    <style name="AppThemeDialog"
            parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#FF333333</item>
        <item name="colorPrimary">@color/primary</item>
        <!-- <item name="android:background">@color/background_material_light</item> -->
        <!-- <item name="android:windowTitleStyle">@style/window_dialog_title_style</item> -->
    </style>

    <style name="window_dialog_title_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:background">@color/background_material_light</item>
    </style>

    <style name="window_title_style">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActivityDefault">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="legacyEditText"
            parent="@android:style/Widget.EditText"/>

    <!-- Styles for Task Editor -->

    <style name="edit_detail_pane">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="edit_detail_ll">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- Styles for main task list -->

    <style name="task_list_container">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="task_group_list_item"/>

    <style name="task_list_item_date"
            parent="dark_text">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
    </style>

    <style name="task_list_group_count"
            parent="editor_label_text">
        <item name="android:layout_marginRight">@dimen/task_list_right_margin</item>
    </style>

    <style name="task_list_overdue_text">
        <item name="android:textColor">@color/overdue_date_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="task_list_due_text">
        <item name="android:textColor">@color/due_date_text</item>
    </style>

    <!-- Styles for Widgets -->

    <style name="task_widget_parent"> <!-- Common Style for all widgets -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="task_edit_widget"
            parent="task_widget">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextAppearance.EditTask_SpinnerButton"
            parent="TextAppearance.EditTask_Spinner">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.fixed"
            parent="android:TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>

    <style name="dialog_button_stacked_primary"
            parent="dialog_button_primary">
        <item name="android:gravity">right</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dialog_button_stacked_secondary"
            parent="dialog_button_stacked_primary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="checklist_checked_item_text">
        <item name="android:textColor">#ff808080</item>
    </style>

    <style name="Theme.MaterialDialog"
            parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="details_label_icon"
            parent="field_view_text_value">
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- styles for actionbar / toolbar -->

    <style name="TextAppearance.StatusBar.EventContent.Title.colorFix"/>

    <style name="TextAppearance.StatusBar.EventContent.Action"/>

    <style name="ot_notification_icon_undo">
        <item name="android:src">@drawable/ic_24_undo_white</item>
    </style>

    <style name="opentasks_details_appbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="elevation">0dp</item>
    </style>

</resources>