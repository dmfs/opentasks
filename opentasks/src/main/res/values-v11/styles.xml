<resources xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme"
            parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DetailsTheme"
            parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/DetailsActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DetailsActionBar"
            parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00000000</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="btn_remove">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/content_remove</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="detail_label_line">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dark_edit_text"
            parent="dark_text">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="TextAppearance.EditTask_Spinner"
            parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="task_widget"
            parent="task_widget_parent">
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginBottom">2sp</item>
    </style>

    <style name="task_progressbar"
            parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="task_seekbar"
            parent="android:Widget.SeekBar">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="task_group_text">
        <item name="android:textColor"
                tools:targetApi="14">?attr/colorPrimary
        </item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="task_list_item_text"
            parent="android:attr/textAppearanceMedium">
        <item name="android:textColor"
                tools:targetApi="14">@style/dark_text
        </item>
    </style>

    <style name="field_view_text_value"
            parent="dark_text">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="field_editor_text_value"
            parent="dark_edit_text"> <!-- Common style for all text edit fields in widgets -->
    </style>

    <style name="task_list_widget_list">
        <item name="android:background">@drawable/widget_list_item_bg</item>
    </style>

    <style name="tasks_expandable_list_item">
        <item name="android:background">@drawable/selectable_list_item</item>
    </style>

    <style name="task_list_progress_background">
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/task_progress_background_shade</item>
    </style>

    <style name="time_forward_button"
            parent="@style/detail_label_text">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="dialog_text_title"
            parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#C0000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_button_primary"
            parent="android:Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/accent_material_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_button_secondary"
            parent="dialog_button_primary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="actionColorBar">
        <item name="android:layout_height">@dimen/abc_action_bar_default_height_material</item>
    </style>

    <style name="Theme.MaterialDialog"
            parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar"></style>

</resources>