<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0px">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:centerColor="#ffe0e0e0"
                    android:endColor="#fff0f0f0"
                    android:startColor="#ffd8d8d8"/>
        </shape>
    </item>
    <item
            android:bottom="0dp"
            android:left="-1px"
            android:right="-1px"
            android:top="-1px">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>

            <stroke
                    android:width="1px"
                    android:color="#10000000"/>
        </shape>
    </item>

</layer-list>